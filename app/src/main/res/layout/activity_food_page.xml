<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodPageActivity">

    <ImageView
        android:id="@+id/foodPageImage"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodPageImage">

        <TextView
            android:id="@+id/foodPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30sp"

            android:text="@string/app_name" />

        <TextView
            android:id="@+id/foodPageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/inter_medium"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginVertical="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/carts_1" />

            <Button
                android:id="@+id/btnAddToBasket"
                android:layout_width="250dp"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                android:text="@string/addToBasket"
                android:backgroundTint="#CFCFCF"
                android:textColor="#000"
                android:textSize="17sp"
                android:fontFamily="@font/inter_medium"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>